{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/craftos",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build"
        },
        {
            "name": "(lldb) Launch (Guard Malloc)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/craftos",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build",
            "env": {"DYLD_INSERT_LIBRARIES": "/usr/lib/libgmalloc.dylib"}
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/craftos",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
